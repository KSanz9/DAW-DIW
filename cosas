    <script type="text/javascript">
    arr = new Array() ;

    function comprobarNombre(nombre){
        if (/^[^0-9]*[a-z][A-Z]*[^0-9]*[a-z][A-Z]*$[^0-9]*/.test(nombre)) {
            this.arr[0]=true;
        } else {
            this.arr=arr.push(false);
        }
    }
    //^[^0-9]*[a-z][A-Z]*[^0-9]*[a-z][A-Z]*$[^0-9]* --->validar nombre
    </script>

