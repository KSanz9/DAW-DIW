       /* ejercicio 3
       */
       function isvalidDni(dni){ // Retorna: true | false
        if (/^\d{8}[a-zA-Z]$/.test(dni)) {
          var n = dni.substr(0,8);
          var c = dni.substr(8,1);
          return (c.toUpperCase() == 'TRWAGMYFPDXBNJZSQVHLCKET'.charAt(n%23)); // DNI correcto ?
        }
          return false; // DNI incorrecto
        }
       function isValidEmail(mail) { 
        return /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,4})+$/.test(mail); 
       }
       function isValidIp(ipaddress) {
        if (/^(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/.test(ipaddress)){
          return true;
          }else{
            return false;
        }
       }

       function isValidURL(url) {
        var urlRegex = '^(?!mailto:)(?:(?:http|https|ftp)://)(?:\\S+(?::\\S*)?@)?(?:(?:(?:[1-9]\\d?|1\\d\\d|2[01]\\d|22[0-3])(?:\\.(?:1?\\d{1,2}|2[0-4]\\d|25[0-5])){2}(?:\\.(?:[0-9]\\d?|1\\d\\d|2[0-4]\\d|25[0-4]))|(?:(?:[a-z\\u00a1-\\uffff0-9]+-?)*[a-z\\u00a1-\\uffff0-9]+)(?:\\.(?:[a-z\\u00a1-\\uffff0-9]+-?)*[a-z\\u00a1-\\uffff0-9]+)*(?:\\.(?:[a-z\\u00a1-\\uffff]{2,})))|localhost)(?::\\d{2,5})?(?:(/|\\?|#)[^\\s]*)?$';
        var urlexp = new RegExp(urlRegex, 'i');
        return url.length < 2083 && urlexp.test(url);
       }

       dniCorrecto = new Boolean(false);
       correoCorrecto = new Boolean(false);
       ipCorrecta = new Boolean(false);
       urlValida = new Boolean(false);

       do {//introducimos por el promp un dni y luego lo comprobamos hasta que sea correcto
        
        var dni = prompt("Introduzca su DNI");
        dniCorrecto = isvalidDni(dni);

       } while (!dniCorrecto);
       
       do {//introducimos por el promp un correo y luego lo comprobamos hasta que sea correcto
       
        var correo = prompt("Introduzca su correo electronico");
        correoCorrecto=isValidEmail(correo);
        
       } while (!correoCorrecto);

       do {
        var ip = prompt("Introduce un Ip valida");
        ipCorrecta = isValidIp(ip);

       } while (!ipCorrecta);

       do {

        var url = prompt("introduce una url valida")
        urlValida = isValidURL(url);
       } while (!urlValida);
       


       document.write("El DNI: "+dni+" ha sido validado"+"<br>");
       document.write("El correo: "+correo+" ha sido validado"+"<br>");
       document.write("La IP: "+ip+" ha sido validado"+"<br>");
       document.write("La URL: "+url+" es valida se ha podido acceder");








      </script>
